<?xml version="1.0" encoding="utf-8"?>
<miui.widget.GuidePopupView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <ImageView android:id="@+id/arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
    />

    <ImageView android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
    />

    <TextView
        android:id="@android:id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textColor="@color/guide_popup_window_textColor"
        android:ellipsize="end"
    />
</miui.widget.GuidePopupView>
