<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="displayOptions"
        android:title="@string/preference_displayOptions">
        <com.android.contacts.preference.SortOrderPreference
            android:key="sortOrder"
            android:title="@string/display_options_sort_list_by"
            android:dialogTitle="@string/display_options_sort_list_by" />

        <com.android.contacts.preference.DisplayOrderPreference
            android:key="displayOrder"
            android:title="@string/display_options_view_names_as"
            android:dialogTitle="@string/display_options_view_names_as" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="others"
        android:title="@string/select_show_contacts" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="only_phones"
            android:persistent="true"
            android:title="@string/display_only_phones" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_display_sim_contacts"
            android:persistent="false"
            android:title="@string/display_sim_contacts" />
        <PreferenceScreen
            android:key="pref_key_contact_filter"
            android:title="@string/preference_contacts_filter" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_smart_group_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_smart_group_company"
            android:persistent="true"
            android:summary="@string/preference_smart_group_company_summary"
            android:title="@string/preference_smart_group_company_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_smart_group_location"
            android:persistent="true"
            android:summary="@string/preference_smart_group_location_summary"
            android:title="@string/preference_smart_group_location_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_smart_group_frequency"
            android:persistent="true"
            android:summary="@string/preference_smart_group_frequency_summary"
            android:title="@string/preference_smart_group_frequency_title" />
    </PreferenceCategory>

</PreferenceScreen>
