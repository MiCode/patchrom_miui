<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@miui:drawable/full_screen_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/digits_container"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialer_digits_background">
            <com.android.contacts.dialpad.DigitsEditText
                android:id="@+id/digits"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                style="@style/TextStyleDialerDigits"
                android:singleLine="true"
                android:ellipsize="start"
                android:background="@android:color/transparent" />
            <TextView
                android:id="@+id/digits_location"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="6dip"
                android:layout_gravity="left|bottom"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end" />
        </LinearLayout>
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <EditableListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:scrollbarStyle="outsideOverlay"
                android:choiceMode="multipleChoiceModal"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"/>
            <LinearLayout
                android:id="@+id/yellow_page_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@miui:drawable/list_item_with_title_background"
                android:visibility="gone" >
                <include layout="@miui:layout/list_item_padding_left" />
                <include layout="@layout/yellow_page_header" />
                <include layout="@miui:layout/list_item_padding_right" />
            </LinearLayout>
            <include
                layout="@layout/dialer_list_empty" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/dialHideContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/dialer_bottom_bar_bg">
            <Button
                android:id="@+id/goto_contact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_goto_contact" />
            <miui.widget.ImageTextButton
                android:id="@+id/dialHideT9KeyTip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/dialer_bottom"
                android:text="@string/openDialKeyboard"
                style="@style/TextStyleOpenDailerButton"
                android:background="@drawable/btn_open_dialer" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.contacts.dialpad.DialerButtons
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="238dip"
                android:layout_gravity="bottom"
                android:background="@drawable/dialer_background"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/DialerButtonRow">
                    <View
                        android:id="@+id/one"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_one" />
                    <View
                        android:id="@+id/two"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_two" />
                    <View
                        android:id="@+id/three"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_three" />
                </LinearLayout>
                <LinearLayout
                    style="@style/DialerButtonRow">
                    <View
                        android:id="@+id/four"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_four" />
                    <View
                        android:id="@+id/five"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_five" />
                    <View
                        android:id="@+id/six"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_six" />
                </LinearLayout>
                <LinearLayout
                    style="@style/DialerButtonRow">
                    <View
                        android:id="@+id/seven"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_seven" />
                    <View
                        android:id="@+id/eight"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_eight" />
                    <View
                        android:id="@+id/nine"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_nine" />
                </LinearLayout>
                <LinearLayout
                    style="@style/DialerButtonRow">
                    <View
                        android:id="@+id/star"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_star" />
                    <View
                        android:id="@+id/zero"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_zero" />
                    <View
                        android:id="@+id/pound"
                        style="@style/DialerButton"
                        android:contentDescription="@string/description_image_button_pound" />
                </LinearLayout>
            </com.android.contacts.dialpad.DialerButtons>
            <View
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="231dip"
                android:layout_gravity="bottom"
                android:background="@drawable/dialer_buttons" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/dialer_bottom_bar_bg">
            <Button
                android:id="@+id/goto_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_goto_contact"
                android:hapticFeedbackEnabled="true" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_call"
                    android:hapticFeedbackEnabled="true" />
            </LinearLayout>

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_delete"
                android:hapticFeedbackEnabled="true" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
