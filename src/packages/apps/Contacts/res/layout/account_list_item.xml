<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@miui:drawable/list_item_background">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/detail_network_icon_size"
        android:layout_height="@dimen/detail_network_icon_size"
        android:layout_marginRight="7dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem" />

        <TextView
            android:id="@+id/count"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@miui:style/TextAppearance.ListView.SecondaryItem" />
    </LinearLayout>
</LinearLayout>