<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ex="http://schemas.android.com/apk/res/com.android.contacts"
    android:layout_width="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:src="@drawable/list_empty_image" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/secondary_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="10dip"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/list_separator"
                layout="@layout/list_separator" />

            <LinearLayout
                android:id="@+id/add_xiaomi_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_top_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/contacts_unavailable_add_xiaomi_account" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_middle_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/contacts_unavailable_add_account" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/noContactHelpTextAccountsInfo"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/import_sim_contacts_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_middle_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/import_from_sim" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/import_contacts_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_middle_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/contacts_unavailable_import_contacts" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/display_sim_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_middle_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/display_sim_contacts" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/create_contact_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_bottom_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/contacts_unavailable_create_contact" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/import_failure_uninstall_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_single_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/upgrade_out_of_memory_uninstall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/import_failure_retry_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@miui:drawable/list_medium_single_item_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/contact_detail_padding_left"
                    android:text="@string/upgrade_out_of_memory_retry" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>