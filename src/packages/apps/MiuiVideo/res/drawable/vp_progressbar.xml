                android:angle="0"
                android:endColor="#4cffffff"
                android:startColor="#4cffffff" />
        </shape>
    </item>
    
     <item android:id="@android:id/progress" android:drawable="@drawable/vp_time_indicator_progress">
    </item>
    
    
      <item android:id="@android:id/secondaryProgress">
