<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/declaration_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/declaration_title_margin_bottom"
        android:layout_marginTop="@dimen/declaration_title_margin_top"
        android:text="@string/declaration"
        android:textColor="@color/declaration_title"
        android:textSize="@dimen/declaration_title_size" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/declaration_line_height"
        android:layout_marginLeft="@dimen/declaration_line_margin_horizontal"
        android:layout_marginRight="@dimen/declaration_line_margin_horizontal"
        android:background="@color/declaration_line" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/declaration_content_margin_bottom"
        android:layout_marginLeft="@dimen/declaration_content_magrin_horizontal"
        android:layout_marginRight="@dimen/declaration_content_magrin_horizontal"
        android:layout_marginTop="@dimen/declaration_content_margin_top"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/declaration_content_linespace_extra"
        android:text="@string/declaration_content"
        android:textColor="@color/declaration_content_text"
        android:textSize="@dimen/declaration_content_size" />

	    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/declaration_aroundbtn_line_horizontal_height"
        android:background="@color/declaration_aroundbtn_line" />
		
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/declaration_btn_height"
            android:layout_weight="0.5"
            android:background="@drawable/btn_declaration"
            android:text="@string/cancel"
            android:textColor="@color/declaration_btn_text"
            android:textSize="@dimen/declaration_btn_content_size" />

	    <View
        android:layout_width="@dimen/declaration_aroundbtn_line_vertical_width"
        android:layout_height="match_parent"
        android:background="@color/declaration_aroundbtn_line" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/declaration_btn_height"
            android:layout_weight="0.5"
            android:background="@drawable/btn_declaration"
            android:text="@string/ok"
            android:textColor="@color/declaration_btn_text"
            android:textSize="@dimen/declaration_btn_content_size" />

    </LinearLayout>

</LinearLayout>