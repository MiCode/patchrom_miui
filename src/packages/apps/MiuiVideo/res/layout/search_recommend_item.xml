<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_hint_item_height">
        <TextView 
            android:id="@+id/search_recommend_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textIsSelectable="false"
            android:layout_marginLeft="@dimen/search_recommend_item_tv_left_margin"
            android:textSize="@dimen/text_size_34"
            android:textColor="@color/search_recommend_red"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
    	android:layout_height="@dimen/divider_height"
    	android:background="@color/list_divider"/>
</FrameLayout>