<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/allspecials_wrapcontent"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="@dimen/all_special_view_padding_top">
    	
       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/home_onlinevideo_bottombar_height"
           android:layout_gravity="bottom"
           android:background="@drawable/home_online_bottom_bg" />
             	
       <Button
           android:id="@+id/all_special"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="@dimen/home_specialbnt_margin_horizontal"
           android:layout_marginRight="@dimen/home_specialbnt_margin_horizontal"
           android:background="@drawable/btn_bg"
           android:text="@string/all_specials"
           android:textColor="@color/p_80_white"
           android:textSize="@dimen/text_size_30" />
               
</FrameLayout>