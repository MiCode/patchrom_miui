<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/filter_top_offset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_top_offset" />

    <Button
        android:id="@+id/hide_filter"
        android:paddingLeft="@dimen/page_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/filter_button_show_margin_top"
        android:background="@drawable/button"
        android:drawableRight="@drawable/icon_up_arrow"
        android:gravity="left|center_vertical"
        android:text="@string/filter_media" />

</LinearLayout>