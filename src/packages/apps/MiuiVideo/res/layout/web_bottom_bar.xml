<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_bottombar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/web_bottombar_height"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:background="@drawable/bottom_bar_bg">

    <Button
        android:id="@+id/full_screen"
        style="@miui:style/V5.Widget.BottomBarIcon"
        android:layout_gravity="center"
        android:drawableTop="@drawable/fullscreen_to_play"
        android:text="@string/fullscreen_to_play"
        android:textColor="@miui:color/v5_bottom_bar_icon_text_color_light" />

</FrameLayout>