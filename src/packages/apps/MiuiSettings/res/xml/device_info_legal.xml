<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/legal_information">

        <!-- Note: The titles given here probably won't be used.  Instead, we programmatically
                   fill the title with the label of the activity with the corresponding action.
                   If there is not an activity for an action, the item will be removed from the
                   list. -->

        <!-- Copyright information -->
        <PreferenceScreen
                android:key="copyright"
                android:title="@string/copyright_title">
            <intent android:action="android.settings.COPYRIGHT" />
        </PreferenceScreen>

        <!-- License information -->
        <PreferenceScreen
                android:key="license"
                android:title="@string/license_title">
            <intent android:action="android.settings.LICENSE" />
        </PreferenceScreen>

        <!-- Terms and conditions -->
        <PreferenceScreen
                android:key="terms"
                android:title="@string/terms_title">
            <intent android:action="android.settings.TERMS" />
        </PreferenceScreen>

        <!-- MiuiLicense information -->
        <Preference
                android:key="miuiCopyright"
                android:title="@miui:string/miui_copyright_title">
        </Preference>

        <Preference
                android:key="miuiUserAgreement"
                android:title="@miui:string/miui_user_agreement_title">
        </Preference>

        <Preference
                android:key="miuiPrivacyPolicy"
                android:title="@miui:string/miui_privacy_policy_title">
        </Preference>
    </PreferenceScreen>
