<?xml version="1.0" encoding="utf-8"?>
<com.android.internal.widget.LinearLayoutWithDefaultTouchRecepient xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/miui"
    android:id="@+id/topLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/account"
        style="@style/AccountTextShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lockpattern_logo"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="20dip"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/layout_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_text"
            style="@style/PatternHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <miui.widget.LockPatternView
            android:id="@+id/lock_pattern"
            style="@style/SecurityLockPatternView"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:layout_marginTop="5dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/forget_password"
            style="@style/PatternFooterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/forget_password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/info_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/error_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/progress_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:gravity="center" >

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_marginRight="5dip" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_loading"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:text="@string/password_hint"
                android:textColor="@color/text_color_dark_gray"
                android:textSize="@dimen/text_size_large" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="7dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_login"
                style="@style/ButtonNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:text="@string/login" />

            <Button
                android:id="@+id/button_cancel"
                style="@style/ButtonNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</com.android.internal.widget.LinearLayoutWithDefaultTouchRecepient>