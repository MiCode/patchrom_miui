<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.ExpressProgressListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/express_progress_item_padding_left" >

    <ImageView
        android:id="@+id/progress_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/context_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/express_progress_item_padding_vertical"
        android:paddingRight="@dimen/express_progress_item_padding_right"
        android:paddingTop="@dimen/express_progress_item_padding_vertical" >

        <TextView
            android:id="@+id/context"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/time"
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@miui:color/v5_list_secondary_text_color_light"
            android:textIsSelectable="true" />
    </LinearLayout>

</com.miui.yellowpage.ui.ExpressProgressListItem>