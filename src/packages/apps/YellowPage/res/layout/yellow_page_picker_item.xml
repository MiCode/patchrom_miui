<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.YellowPagePickerListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section_header"
        style="@style/YellowPagePickerSectionHeaderTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@miui:drawable/v5_list_view_section_item_bg_light"
        android:text="@string/scan"
        android:visibility="gone" />

    <LinearLayout
        style="@miui:style/V5.Widget.ListView.Item.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/presentation"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

</com.miui.yellowpage.ui.YellowPagePickerListItem>