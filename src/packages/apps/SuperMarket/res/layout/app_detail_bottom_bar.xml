<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical" >

    <View style="@style/Widget.BottomBar.TopLine"
            android:visibility="gone" />

    <LinearLayout
            style="@style/Widget.BottomBar"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:orientation="horizontal" >

        <ImageView
            android:id="@+id/first_button"
            android:layout_weight="1"
            style="@style/Widget.BottomBarIcon"
            android:src="@drawable/ic_menu_permission" />

        <com.xiaomi.market.ui.ActionBottomButton
            android:id="@+id/middle_button"
            android:layout_weight="2"
            style="@style/Widget.BottomBar.Button" />

        <ImageView
            android:id="@+id/last_button"
            android:layout_weight="1"
            style="@style/Widget.BottomBarIcon"
            android:src="@drawable/ic_menu_share" />
    </LinearLayout>

</LinearLayout>