<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@miui:style/V5.Widget.EditMode.TopBar" >

    <Button
        android:id="@+id/button_edit_comment_cancel"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button"
        android:layout_weight="0"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/textview_edit_comment_title"
        style="@miui:style/V5.TextAppearance.EditMode"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <Button
        android:id="@+id/button_edit_comment_publish"
        style="@miui:style/V5.Widget.EditMode.TopBar.Button.Default"
        android:layout_weight="0"
        android:text="@string/comment_publish" />

</LinearLayout>