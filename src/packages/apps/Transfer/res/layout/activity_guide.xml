<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dip"
    android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingBottom="@miui:dimen/v5_list_view_padding_horizontal" >
    <TextView
        android:id="@+id/step_title"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center_horizontal"
        style="@miui:style/V5.TextAppearance" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/step_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/step_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@miui:style/V5.TextAppearance.List.Secondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/step_btn_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_pre" />
        <Button
            android:id="@+id/step_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_next" />
    </LinearLayout>
</LinearLayout>
