<?xml version="1.0" encoding="utf-8"?>
<FloatPanelView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@miui:id/panel"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@miui:drawable/textview_panel_bg">
        <TextView
            android:id="@+id/play_slideshow_button"
            style="@miui:style/TextViewFloatPanelButton"
            android:text="@string/preview" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@miui:drawable/textview_panel_separator"/>
        <TextView
            android:id="@+id/edit_slideshow_button"
            style="@miui:style/TextViewFloatPanelButton"
            android:text="@string/edit" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@miui:drawable/textview_panel_separator"/>
        <TextView
            android:id="@+id/remove_slideshow_button"
            style="@miui:style/TextViewFloatPanelButton"
            android:text="@string/remove" />
    </LinearLayout>

    <ImageView android:id="@miui:id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@miui:drawable/textview_panel_arrow_up"
        android:visibility="gone" />
    <ImageView android:id="@miui:id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@miui:drawable/textview_panel_arrow_down"
        android:visibility="gone" />
</FloatPanelView>
