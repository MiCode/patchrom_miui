<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >
    <ImageView
            android:id="@+id/recent_contact_divider"
            android:src="@drawable/recent_contact_divider_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    <TextView
        style="?android:attr/textAppearanceMedium"
        android:id="@+id/recent_contact_name"
        android:background="@drawable/recent_contact_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/recent_contact_divider"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee" />
</RelativeLayout>
