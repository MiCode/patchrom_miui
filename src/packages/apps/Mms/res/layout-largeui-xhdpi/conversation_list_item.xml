<?xml version="1.0" encoding="utf-8"?>
<com.android.mms.ui.ConversationListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@miui:drawable/v5_list_view_item_bg_light"
    android:gravity="center_vertical">

    <android.widget.QuickContactBadge
        android:id="@+id/avatar"
        android:visibility="gone"
        android:layout_height="@dimen/avatar_size_large"
        android:layout_width="@dimen/avatar_size_large" />

    <TextView
        android:id="@+id/fetion_prefix"
        android:visibility="gone"
        android:text="@string/fetion_prefix"
        android:textAppearance="@style/TextAppearance.List.Primary"
        android:textColor="@color/fetion_prefix_text_color"
        android:paddingRight="4dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/from"
        android:textAppearance="@style/TextAppearance.List.Primary"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="7dp"
        android:maxWidth="175dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/msg_count"
        android:textAppearance="@style/TextAppearance.List.Secondary"
        android:singleLine="true"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/unread_msg_count"
        android:textAppearance="@style/UnreadMessageCount"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="gone"
        android:background="@drawable/sms_unread_count_bg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:textAppearance="@style/TextAppearance.List.Secondary"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/sim_indicator"
        android:src="@drawable/conversation_attachment_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/attachment_indicator"
        android:src="@drawable/conversation_attachment_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/timed_indicator"
        android:src="@drawable/conversation_timed_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/draft_indicator"
        android:src="@drawable/conversation_draft_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/error_indicator"
        android:src="@drawable/conversation_error_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/stick_indicator"
        android:src="@drawable/conversation_stuck_indicator"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/subject"
        android:textAppearance="@style/TextAppearance.List.Secondary"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <CheckBox
        android:id="@android:id/checkbox"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</com.android.mms.ui.ConversationListItem>