<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ResourceBrowser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResourceBrowser.ListItem">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ResourceBrowser.HorizontalLine">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ResourceBrowser.ResourceImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/resource_thumbnail_bg</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Vertical">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Horizontal">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.Font">
        <item name="android:paddingBottom">30dip</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ResourceBrowser.ResourceDescription.SubDescription">
        <item name="android:gravity">top</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- progressBar style -->
    <style name="ResourceBrowser.Widget.ProgressBar.ReadOnly" parent="@miui:style/V5.Widget.ProgressBar.Horizontal.Small">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/resource_progressbar_readonly</item>
    </style>

    <!-- ratingBar style -->
    <style name="ResourceBrowser.Widget.RatingBar.ReadOnly" parent="@miui:style/V5.Widget.RatingBar.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="ResourceBrowser.Widget.RatingBar.Edit" parent="@miui:style/V5.Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <!-- detail page category title -->
    <style name="Resource.Detail.Category.Title" parent="@miui:style/V5.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/detail_category_horizontal_padding</item>
        <item name="android:textColor">@color/resource_detail_category_title_color</item>
    </style>

    <style name="Resource.Detail.Category.Title.WithBg">
        <item name="android:background">@drawable/resource_detail_category_title_bg</item>
    </style>

</resources>
