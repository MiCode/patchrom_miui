<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ResourceBrowser.ListItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@drawable/list_item_multiple_bg">
        <ImageView
            android:id="@+id/thumbnail_1"
            style="@style/ResourceBrowser.ResourceImage" />
        <ImageView
            android:id="@+id/thumbnail_2"
            style="@style/ResourceBrowser.ResourceImage" />
        <ImageView
            android:id="@+id/thumbnail_3"
            style="@style/ResourceBrowser.ResourceImage" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">
        <TextView
            android:id="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/ResourceBrowser.ResourceDescription" />
        <TextView
            android:id="@+id/author"
            android:textAppearance="?android:attr/textAppearanceSmall"
            style="@style/ResourceBrowser.ResourceDescription" />
    </LinearLayout>
    <include layout="@layout/resource_flag" />
</FrameLayout>
