<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            style="@style/TrackDetailText" />
        <TextView android:id="@+id/value"
            style="@style/TrackDetailText" />
    </LinearLayout>

    <LinearLayout android:id="@+id/album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            style="@style/TrackDetailText" />
        <TextView android:id="@+id/value"
            style="@style/TrackDetailText" />
    </LinearLayout>

    <LinearLayout android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            style="@style/TrackDetailText" />
        <TextView android:id="@+id/value"
            style="@style/TrackDetailText" />
    </LinearLayout>

    <LinearLayout android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            style="@style/TrackDetailText" />
        <TextView android:id="@+id/value"
            style="@style/TrackDetailText" />
    </LinearLayout>

    <LinearLayout android:id="@+id/format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/name"
            style="@style/TrackDetailText" />
        <TextView android:id="@+id/value"
            style="@style/TrackDetailText" />
    </LinearLayout>

</merge>
