<com.miui.player.ui.view.CheckableRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@miui:style/V5.Widget.ListView.Item.TrebleLine"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_picker_item_height"
    android:gravity="center_vertical"
    android:ignoreGravity="@+id/radio">

    <RadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false" />

    <TextView android:id="@+id/line1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/radio"
        android:layout_toLeftOf="@+id/play_indicator"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView android:id="@+id/line2"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/line1"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/radio"
        android:layout_toLeftOf="@+id/play_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/play_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true" />

</com.miui.player.ui.view.CheckableRelativeLayout>
