<resources>
    <style name="FMStationSeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:thumbOffset">8dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FMRadioActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions" />
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextAppearanceFMStatus">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FMTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="miui:v5_bottom_placeholder">@null</item>
        <item name="miui:v5_bottom_bar_bg">@null</item>
        <item name="miui:v5_bottom_bar_top_line">@null</item>
        <item name="miui:v5_top_placeholder">@null</item>
        <item name="miui:v5_title_bar_bg">@null</item>
    </style>
</resources>
