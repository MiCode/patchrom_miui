<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gadget_weather_a1_bg">

        <include
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/gadget_weather_2x4_new_frame" />

        <include
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/gadget_weather_2x4_new_frame" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/gadget_weather_a1_mask" />
    </FrameLayout>

    <ImageView
        android:id="@+id/widget_2x4_up_1"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip" />
    <ImageView
        android:id="@+id/widget_2x4_up_2"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="150dip" />
    <ImageView
        android:id="@+id/widget_2x4_down_1"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="0dip" />
    <ImageView
        android:id="@+id/widget_2x4_down_2"
        android:layout_width="300dip"
        android:layout_height="100dip"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="150dip" />
</FrameLayout>
