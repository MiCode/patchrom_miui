<resources>
    <bool name="config_hardwareAccelerated">true</bool>
    <bool name="config_use_software_icon">true</bool>

    <dimen name="config_icon_width">60dip</dimen>
    <dimen name="config_icon_height">60dip</dimen>

    <integer name="config_cell_count_x">4</integer>
    <integer name="config_cell_count_y">5</integer>

    <integer name="config_folder_columns_count">3</integer>

    <integer name="config_folder_animation_duration">20</integer>
    <integer name="config_delete_zone_animation_duration">30</integer>
    <integer name="delete_color_alpha">180</integer>
    <integer name="error_notification_duration">1500</integer>

    <!-- home indicator can be:slider,bottom_point,top_point,none -->
    <string name="home_indicator">bottom_point</string>
    <!-- wallpaper scrolling can be:all,left,center,right -->
    <string name="wallpaper_scrolling">all</string>

    <fraction name="config_cell_editing_offset_v">2%</fraction>

    <!--  When dragging an item on the workspace, how much bigger the dragged view
          should be, as compared to the original view. If 0, it will not be scaled at all.
          Should be an even number, for pixel alignment. -->
    <fraction name="config_dragViewScale">110%</fraction>

    <!-- The duration (in ms) of the fade animation on the object outlines, used when
         we are dragging objects around on the home screen. -->
    <integer name="config_dragOutlineFadeTime">900</integer>

    <integer name="config_dragViewAlpha">230</integer>
    <!-- The alpha value at which to show the most recent drop visualization outline. -->
    <integer name="config_dragOutlineMaxAlpha">128</integer>

    <!-- Parameters controlling the animation for when an item is dropped on the home screen,
         and it animates from its old position to the new one. -->
    <integer name="config_dropAnimMaxDuration">500</integer>
    <integer name="config_dropAnimMinDuration">300</integer>

    <!-- The duration of the UserFolder opening and closing animation -->
    <integer name="config_folderAnimDuration">120</integer>

    <!-- The distance at which the animation should take the max duration -->
    <integer name="config_dropAnimMaxDist">800</integer>

    <integer name="config_itemShakeTime">400</integer>
</resources>
