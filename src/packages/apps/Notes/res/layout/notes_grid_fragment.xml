<?xml version="1.0" encoding="utf-8"?>

<view
    xmlns:android="http://schemas.android.com/apk/res/android"
    class="com.miui.notes.list.SortableGridView"
    android:id="@+id/grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/grid_padding_left"
    android:paddingRight="@dimen/grid_padding_right"
    android:numColumns="@integer/grid_column_count"
    android:columnWidth="@dimen/grid_item_width"
    android:stretchMode="spacingWidth"
    android:gravity="center"
    android:listSelector="@android:color/transparent"
    android:scrollbars="none" />
