<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:miui="http://schemas.android.com/apk/res/miui"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

    <miui.widget.NumberPicker
        android:id="@+id/day"
        miui:state_first="true"
        style="@style/Widget.NumberPicker" />

    <miui.widget.NumberPicker
        android:id="@+id/hour"
        android:text="@miui:string/v5_time_picker_label_hour"
        miui:state_middle="true"
        style="@style/Widget.NumberPicker" />

    <miui.widget.NumberPicker
        android:id="@+id/minute"
        android:text="@miui:string/v5_time_picker_label_minute"
        miui:state_last="true"
        style="@style/Widget.NumberPicker" />

</LinearLayout>
