<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextAppearance" parent="@miui:style/V5.TextAppearance" />

    <!-- text appearence for note editor -->

    <style name="TextAppearance.Editor">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorLink">@color/link_text</item>
    </style>

    <style name="TextAppearance.Editor.Super">
        <item name="android:textSize">@dimen/text_font_size_super</item>
    </style>

    <style name="TextAppearance.Editor.Large">
        <item name="android:textSize">@dimen/text_font_size_large</item>
    </style>

    <style name="TextAppearance.Editor.Medium">
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>

    <style name="TextAppearance.Editor.Normal">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
    </style>

    <style name="TextAppearance.Editor.Info">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- text appearence for title -->

    <style name="TextAppearance.Title" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="TextAppearance.Title.Large">
        <item name="android:textSize">@dimen/text_title_size_large</item>
    </style>

    <style name="TextAppearance.Title.Medium" />

    <style name="TextAppearance.Title.Small">
        <item name="android:textSize">@dimen/text_title_size_small</item>
    </style>

    <!-- text appearence for list item -->

    <style name="TextAppearance.List.Primary" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/snippet_text</item>
    </style>

    <style name="TextAppearance.List.Secondary" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/info_text</item>
    </style>

    <!-- text appearence for header -->

    <style name="TextAppearance.Header">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/header_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- text appearence for grid item -->

    <style name="TextAppearance.Grid">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/snippet_text</item>
    </style>

    <style name="TextAppearance.Grid.Folder">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- text appearence for highlight -->

    <style name="TextAppearance.HighLight" parent="@miui:style/V5">
        <item name="android:textColor">@color/user_query_highlight</item>
    </style>

    <!-- widget style -->

    <style name="Widget" />

    <style name="Widget.GridText">
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:paddingLeft">@dimen/grid_note_content_padding_left</item>
        <item name="android:paddingRight">@dimen/grid_note_content_padding_right</item>
    </style>

    <style name="Widget.ColorSelector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:focusable">false</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/ic_color_picker_checkbox</item>
    </style>

    <style name="Widget.AttachmentItem">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/action_padding_size</item>
        <item name="android:paddingRight">@dimen/action_padding_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/action_font_size</item>
        <item name="android:textColor">@color/popup_item_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- actionbar style -->

    <style name="ActionBar.Custom" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ActionBar.Custom.Editor">
        <item name="android:height">@dimen/notes_edit_header_height</item>
    </style>
</resources>
