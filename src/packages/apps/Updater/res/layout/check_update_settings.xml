<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@miui:drawable/v5_preference_item_bg"
        android:gravity="center">
        <TextView
            style="@style/TextAppearance.Medium"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@miui:dimen/v5_preference_item_padding_inner"
            android:textSize="16sp"
            android:text="@string/check_update_when_wifi_available"
            android:gravity="center_vertical|left" />
        <miui.widget.SlidingButton
            android:id="@+id/check_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@miui:dimen/v5_preference_item_padding_inner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_update_version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@miui:drawable/v5_preference_item_bg"
        android:gravity="center">
        <TextView
            style="@style/TextAppearance.Medium"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@miui:dimen/v5_preference_item_padding_inner"
            android:textSize="16sp"
            android:text="@string/update_monthly_build_only"
            android:gravity="center_vertical|left" />
        <miui.widget.SlidingButton
            android:id="@+id/change_update_version_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@miui:dimen/v5_preference_item_padding_inner" /> />
    </LinearLayout>

</LinearLayout>