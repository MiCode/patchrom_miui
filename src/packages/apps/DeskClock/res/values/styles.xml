<resources>
    <style name="clock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AlarmClockTheme" parent="android:Theme.Holo.DialogWhenLarge"/>
    <style name="SetAlarmTheme" parent="android:Theme.Holo.DialogWhenLarge"/>

    <!-- This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource. -->
    <style name="AlarmAlertTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- NOTE: This must be a fullscreen theme, or else the fullscreen alarm will
         be unable to turn the screen on. -->
    <style name="AlarmAlertFullScreenTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar"/>

    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonStripLeft">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_left</item>
    </style>
    <style name="ButtonStripMiddle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_middle</item>
    </style>
    <style name="ButtonStripRight">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_right</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <style name="AlarmItemTimezoneStyle" parent="@miui:style/TextAppearance.ListView.PrimaryItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24px</item>
        <item name="android:drawablePadding">7dip</item>
    </style>

    <style name="TimeDigitsStyle" parent="@miui:style/TextAppearance.ListView.PrimaryItem">
        <item name="android:textSize">30sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DeskClockDarkActionBar" parent="@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:homeAsUpIndicator">@miui:drawable/ab_home_up</item>
    </style>

    <style name="DeskClockStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionModeCloseDrawable">@miui:drawable/ab_home_up</item>
        <item name="android:actionBarStyle">@style/DeskClockDarkActionBar</item>
        <item name="android:actionOverflowButtonStyle">@miui:style/Widget.Holo.Light.ActionButton.Overflow</item>
        <item name="android:logo">@null</item>
    </style>
</resources>
