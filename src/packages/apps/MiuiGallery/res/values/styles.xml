<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <style name="Theme.Gallery" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/title_navigator_selector</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Holo.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_cab_done</item>
        <item name="android:actionModeCloseButtonStyle">@style/MutilChoiceCloseModeStyle</item>
    </style>
    <style name="Holo.ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:background">@drawable/title</item>
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="MutilChoiceCloseModeStyle">
        <item name="android:background">@drawable/btn_cab_done_selector</item>
    </style>
    <style name="MediaButton.Play" parent="@android:style/MediaButton.Play">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/icn_media_play</item>
    </style>
    <style name="DialogPickerTheme" parent="Theme.Gallery">
    </style>
    <style name="WidgetChooserTheme" parent="android:Theme.Holo.Dialog">
    </style>
    <bool name="picker_is_dialog">false</bool>
    <color name="darker_transparent">#C1000000</color>
    <style name="DeepStyle">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">-0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    <style name="MultiSelectActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!--  For HomePage and AlbumSetPage title count gradual text -->
    <style name="TitleGradualText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/title_gradual_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">4.667dip</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!--  For HomePage and AlbumSetPage title count desc text -->
    <style name="TitleDescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_desc_text_size</item>
        <item name="android:textColor">@color/title_desc_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">6.667dip</item>
        <item name="android:layout_marginTop">2.667dip</item>
    </style>

    <!--  For AlbumPage and StorageExplorerPage title primary text -->
    <style name="TitlePrimaryText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/title_primary_text_size</item>
        <item name="android:textColor">@color/title_primary_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- For AlbumPage and StorageExplorerPage title secondary text -->
    <style name="TitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text_size</item>
        <item name="android:textColor">@color/title_secondary_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomePageTitleText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/home_page_title_normal_text_size</item>
        <item name="android:textColor">@color/title_primary_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/home_page_title_padding_left</item>
    </style>

    <style name="HomePageTitleContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_page_title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/title</item>
    </style>

    <style name="HomePageTitleNavigatorIcon">
        <item name="android:src">@drawable/right_arrow_navigator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/home_page_title_navigator_padding_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HomePageSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/black_frame</item>
    </style>

    <style name="HomePageGarySeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/home_page_title_divider</item>
    </style>

    <style name="HomePageSelectionMask">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/black_frame</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="InformationItemTitleStyle" parent="@android:attr/textAppearanceMedium">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="InformationItemStyle">
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="InformationTextStyle" parent="@android:attr/textAppearanceMedium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- For CheckBox while batch selecting -->
    <style name="BatchSelectionCheckBoxStyle">
        <item name="android:button">@drawable/btn_check</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_width">32dip</item>
    </style>

    <!-- For PhotoPage styles -->
    <style name="SingleViewUpperButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SingleViewEditActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SendPopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/send_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/send_popup_fade_out</item>
    </style>

    <style name="ApplyPopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/apply_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/apply_popup_fade_out</item>
    </style>

     <style name="EditPopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/edit_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/edit_popup_fade_out</item>
     </style>

      <style name="DeletePopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/delete_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/delete_popup_fade_out</item>
     </style>

    <!-- 设置页 Theme -->
    <style name="SettingsActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/settings_title_navigator</item>
        <item name="android:actionBarStyle">@style/SettingsActionBarStyle</item>
    </style>

    <!-- 设置页 ActionBar Style -->
    <style name="SettingsActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">homeAsUp|useLogo|showTitle|showHome|showCustom</item>
    </style>

    <!-- ActionBar中 "更多" 的icon -->
    <style name="ActionButtonOverflowStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_more_operations</item>
    </style>

    <!-- For primary text of list item -->
    <style name="ItemPrimaryText">
        <item name="android:textSize">@dimen/item_primary_text</item>
        <item name="android:textColor">@color/item_primary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- For secondary text of list item -->
    <style name="ItemSecondaryText">
        <item name="android:textSize">@dimen/item_secondary_text</item>
        <item name="android:textColor">@color/item_secondary_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
