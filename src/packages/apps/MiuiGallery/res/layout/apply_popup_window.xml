<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/apply_pic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="6dip"
        android:paddingLeft="12dip"
        android:textSize="14.7sp"
        android:textColor="@android:color/white"
        android:text="@string/apply_pic_for"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:src="@drawable/apply_popup_divider"
        android:scaleType="fitXY"/>
    <ListView android:id="@+id/apply_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:divider="@drawable/apply_popup_divider"
        android:cacheColorHint="@android:color/transparent"/>
</LinearLayout>
